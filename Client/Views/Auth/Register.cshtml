@model Client.Models.Dto.RegisterUserDto
@{
}
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row justify-content-center align-items-start h-100">
      <div class="col-12 col-lg-9 col-xl-7">
        <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 text-lg-center">Registration Form</h3>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <form method="post">
                            <div class="form-group p-3">
                                <label for="firstName">Email</label>
                                <input type="text" id="firstName" class="form-control form-control-lg" asp-for="Username" />
                            </div>

                            <div class="form-group p-3">
                                <label for="lastName">Password</label>
                                <input type="password" id="lastName" class="form-control form-control-lg" asp-for="Password" />
                                @if (!ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger mt-2">
                                        <p>Please correct the following errors:</p>
                                        <ul>
                                            @foreach (var key in ViewData.ModelState.Keys)
                                            {
                                                foreach (var error in ViewData.ModelState[key].Errors)
                                                {
                                                    <li>@error.ErrorMessage</li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>

                            <div class="form-group p-3">
                                <h6 class="mb-2 pb-1">User Type</h6>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Roles" id="Writer" value="Writer" checked />
                                    <label class="form-check-label" for="Writer">Writer</label>
                                </div>

                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="Roles" id="Reader" value="Reader" />
                                    <label class="form-check-label" for="Reader">Reader</label>
                                </div>
                            </div>

                            <div class="mt-4 pt-2 text-center">
                                <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
