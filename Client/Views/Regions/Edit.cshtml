@model Client.Models.Dto.RegionDto
@{
}
@if (Model is null)
{
    <p class="alert alert-warning">You need to be and admin to edit a Region.</p>
}
else
{
    <h1 class="mt-3">Edit Region</h1>

    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />

            <label class="form-label">Code</label>
            <input type="text" class="form-control" asp-for="Code" />

            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />

            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="RegionImageUrl" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger" asp-controller="Regions" asp-action="Delete">Delete</button>
        </div>


    </form>

}
