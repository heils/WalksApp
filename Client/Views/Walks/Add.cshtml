@using Client.Models.Dto;
@model Client.Models.Dto.CreateWalkDto
@{
    var regions = ViewBag.Regions;
    var difficulties = ViewBag.Difficulties;
}

<h1 class="mt-3">Add Walk</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />

        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />

        <label class="form-label">Length</label>
        <input type="text" class="form-control" asp-for="Length" />

        <label class="form-label">Image URL</label>
        <input type="text" class="form-control" asp-for="WalkImageUrl" />

        <select class="form-select mt-2" asp-for="RegionId">
            @if (regions != null)
            {
                @foreach (var region in regions)
                {
                    <option value=@region.Id for="RegionId">@region.Name</option>
                }
            }
        </select>

        <select class="form-select mt-2" asp-for="DifficultyId">
            @if (regions != null)
            {
                @foreach (var difficulty in difficulties)
                {
                    <option value=@difficulty.Id for="DifficultyId">@difficulty.Name</option>
                }
            }
            
        </select>
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-2">
                <p>Please correct the following errors:</p>
                <ul>
                    @foreach (var key in ViewData.ModelState.Keys)
                    {
                        foreach (var error in ViewData.ModelState[key].Errors)
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    }
                </ul>
            </div>
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

<script src="../Scripts/DropdownMenu.js"</script>